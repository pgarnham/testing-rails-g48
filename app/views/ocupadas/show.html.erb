<div class="contenedor-tot">

<p id="notice"><%= notice %></p>

<h2 class="titulo-izq">
  <strong>Sala:</strong>
  <%= Room.find(@ocupada.room_id).name %>
  <br>
  <strong>Ocupada por:</strong>
  <%= @ocupada.description %>
</h2>

<p>
  <strong>Fecha:</strong>
  <%= @ocupada.start.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Hora Inicio:</strong>
  <%= @ocupada.start.strftime("%H:%M") %>
</p>

<p>
  <strong>Hora TÃ©rmino:</strong>
  <%= @ocupada.finish.strftime("%H:%M") %>
</p>
<% if @ocupada.user_id == current_user.id %>
  <%= link_to 'Editar', edit_ocupada_path(@ocupada), class: "boton-menor" %> |
<% end %>
<% if current_user.rol=="moderador" or current_user.rol=="administrador" %>
  <%= link_to 'Eliminar', ocupada_path(@ocupada), method: :delete, data: {confirm: "Estas Seguro?"}, class: "boton-menor" %> |
<% end %>
<%= link_to 'Volver', eventos_path, class: "boton-menor" %>
</div>
