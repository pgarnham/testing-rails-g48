<p id="notice"><%= notice %></p>

<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "Campus", campus_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Salas de Estudio", rooms_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Cursos", courses_path %>
    </li>
  </ul>
</div>
<div class="contenedor-tot">
<h1 class="titulo-izq">Cursos</h1>

<tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><h3><%= course.initials + "  ---  " + course.name %></h3></td>
      <td><%= link_to 'Editar', edit_course_path(course) %></td>  |
      <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <br>
      <br>
    </tr>
  <% end %>
</tbody>

<br>

<button class="button-crea"><%= link_to 'Crear Curso', new_course_path %></button>
</div>
