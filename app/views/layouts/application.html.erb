<!DOCTYPE html>
<html>
  <head>
    <title>G48</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">


      <div class="container">

        <div class="navbar-header">
          <%= link_to "Publicaciones", posts_path, class: "navbar-brand" %>
        </div>

          <ul class="nav navbar-nav">
            <li><%= link_to "Registrarse", new_user_registration_path %></li>
            <% if user_signed_in? %>
            <li><%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to "Iniciar Sesion", new_user_session_path %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li><%= link_to "Crear Publicacion", new_post_path %></li>
            <% end %>

          </ul>

      </div>

    </nav>



    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
