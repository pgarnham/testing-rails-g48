<p id="notice"><%= notice %></p>

<p>
  <h1><%= @post.title %></h1>
</p>
<p>
  <%= @post.created_at.strftime("%d - %m - %Y") %> |
  <%= User.find(@post.user_id).name + " " + User.find(@post.user_id).last_name %>  |
  <%= @post.reputation %>
</p>


<p>
  <h3><%= @post.description %></h3>
</p>
<p>
  <h5><%= @post.content %></h5>
</p>



<h2>Comentarios</h2>

  <div class="container">
    <%= @post.comments.each do |comment| %>
        <small><%= comment.created_at.strftime("%d - %m - %Y") %> |
        <%= User.find(comment.user_id).name + " " + User.find(comment.user_id).last_name %>
        </small>
        <h4><%= comment.content %></h4>

        <% if user_signed_in? %>
          <% if comment.user_id == current_user.id %>
            <%= link_to 'Editar', edit_post_comment_path(@post, comment) %> |
            <%= link_to 'Eliminar', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Está Seguro?' } %>
            <br>
          <% end %>
        <% end %>
        <br>

    <% end %>
    <br>
    <button><%= link_to 'Nuevo Comentario', new_post_comment_path(@post) %></button>
  </div>

<br>
<button><%= link_to 'Atrás', posts_path %></button>
<% if user_signed_in? %>
  <% if @post.user_id == current_user.id %>
    <button><%= link_to 'Editar', edit_post_path(@post) %></button>
    <button><%= link_to 'Eliminar', post_path(@post), method: :delete, data: {confirm: "Estas Seguro?"} %></button>
  <% end %>
<% end %>
