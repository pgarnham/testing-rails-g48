<p id="notice"><%= notice %></p>

<h1>Mensajes</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Receptor</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= mensaje.autor %></td>
        <td><%= mensaje.receptor %></td>
        <td><%= mensaje.contenido %></td>
        <td><%= link_to 'Show', mensaje %></td>
        <td><%= link_to 'Edit', edit_mensaje_path(mensaje) %></td>
        <td><%= link_to 'Destroy', mensaje, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

