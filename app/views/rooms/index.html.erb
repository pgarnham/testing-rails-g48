<h1>Salas de Estudio</h1>

<tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><h3><%= room.name %></h3></td>
      <td><%= room.location %></td> ||
      <td><%= "P1: " + room.disponibility.to_s %></td>  |
      <td><%= "P2: " + room.noise.to_s %></td>  |
      <td><%= "P3: " + room.plugs.to_s %></td>
      <br>
      <td><%= link_to 'Editar', edit_room_path(room) %></td>  |
      <td><%= link_to 'Eliminar', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <br>
      <br>
    </tr>
  <% end %>
</tbody>
</table>

<br>

<button><%= link_to 'Crear Sala', new_room_path %></button>
