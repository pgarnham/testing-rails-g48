<nav class="navbar navbar-default">
  <div class="container">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li><%= link_to "Campus", campus_path %></li>
        <li><%= link_to "Salas de Estudio", rooms_path %></li>
        <li><%= link_to "Cursos", courses_path %></li>
        <% end %>
      </ul>
